<Window x:Class="SteeringWheel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteeringWheel"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Background="LightSkyBlue"
        Title="Android Steering Wheel" Height="600" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="50,50,0,0">
            <Label>Connection Mode</Label>
            <RadioButton GroupName="connection" IsChecked="True">Bluetooth</RadioButton>
            <RadioButton GroupName="connection">Wifi Hotspot</RadioButton>
        </StackPanel>
    </Grid>
</Window>
